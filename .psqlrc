/*

.psqlrc for Lance Alligood

*/

-- Suppress any output when setting options below
\set QUIET

-- Customize prompt: make prompt bold yellow & display DB name
\set PROMPT1 '%[%033[1;33m%][%/] #%033[00m '
\set PROMPT2 '%033[1;33m... #%033[00m '

-- Show how long each query takes to execute
\timing
-- Use best available output format
\x auto
\set VERBOSITY verbose
\set HISTFILE ~/.psql_history- :DBNAME
\set HISTCONTROL ignoredups
\set COMP_KEYWORD_CASE upper
-- Replace null field result with '[NULL]'
\pset null '[NULL]'
-- Re-enable standard output
\unset QUIET
